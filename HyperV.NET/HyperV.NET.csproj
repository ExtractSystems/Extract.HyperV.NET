<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net50-windows;net45</TargetFrameworks>
    <AssemblyName>HyperVNET</AssemblyName>
    <RootNamespace>HyperV</RootNamespace>
    <PackageId>HyperV.NET</PackageId>
    <Version>1.0.172.0</Version>
    <Authors>Jean-Sebastien Carle</Authors>
    <Company>Jean-Sebastien Carle</Company>
    <Product>HyperV.NET</Product>
    <Description>Simple Hyper-V Virtual Machine Creation</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net50-windows'">
    <PackageReference Include="System.Management">
      <Version>5.0.0</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net45'">
    <PackageReference Include="System.Management">
      <Version>5.0.0</Version>
    </PackageReference>
  </ItemGroup>

</Project>
